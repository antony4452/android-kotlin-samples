<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookManagerApplicationWithSQLite"
        tools:targetApi="31">
        <activity
            android:name=".activities.UpdateActivity"
            android:exported="false"
            android:label="@string/title_activity_update"
            android:theme="@style/Theme.BookManagerApplicationWithSQLite" />
        <activity
            android:name=".activities.ListDataActivity"
            android:exported="false"
            android:label="@string/title_activity_list_data"
            android:theme="@style/Theme.BookManagerApplicationWithSQLite" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.BookManagerApplicationWithSQLite" />
        <activity
            android:name=".CreateBookActivity"
            android:exported="false"
            android:label="@string/title_activity_create_book"
            android:theme="@style/Theme.BookManagerApplicationWithSQLite" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BookManagerApplicationWithSQLite">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>